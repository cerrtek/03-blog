---
import { Image, Picture } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05Img from '@images/post-05.png';
import post01Img from '@images/post-01.png';


---
<MainLayout title="Imágenes">
    <div class="text-white">
        <h1 class="text-5xl">Imágenes</h1>
        <h1>Imagen desde la carpeta Public/Assets</h1>
        <img loading="eager" src="/assets/images/post-05.png" width="250" height="250" alt="">

        <h1>Imagen desde la carpeta Pages/Images</h1>
        <Image src={ post05Img } width="250" height="250" alt=""/>

        <h1>Imagen Con más calidad</h1>
        <Image src={ post05Img } style={{width: '250px', height: '250px'}} width="500" height="500" alt=""/>
        
        <h1>Imagen Quality Low</h1>
        <Image src={ post05Img } quality="low" width="250" height="250" alt=""/>

        <h1>Imagen Quality high</h1>
        <Image src={ post05Img } quality="high" width="250" height="250" alt=""/>

        <h1>Imagen Quality max</h1>
        <Image src={ post05Img } quality="max" width="250" height="250" alt=""/>

        <h1>Imagen Quality mid</h1>
        <Image src={ post05Img } quality="mid" width="250" height="250" alt=""/>

        <h1>Formatos</h1>
        <Image src={ post05Img } format="jpeg" width="250" height="250" alt=""/>

        <h1>Pictures</h1>
        <Picture src={ post01Img } formats={['webp', 'avif', 'jpeg']} width="250" height="250" alt=""/>


        <div style={{ height: '3000px'}}></div>
        <img loading="lazy" src="/assets/images/post-05.png" alt="">
</div>
</MainLayout>

<style>
    h1 {
        @apply mt-10;
    }
</style>